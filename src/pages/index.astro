    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="nujum.charda.org" />
    <meta property="twitter:url" content="https://nujum.charda.org" />
    <meta
      name="twitter:title"
      content="Nujum | Passing Grade & Prediksi Kelulusan UTBK-SNBT 2025"
    />
    <meta
      name="twitter:description"
      content="Cek passing grade dan prediksi kelulusan UTBK-SNBT dari 145 PTN dalam satu tempat."
    />
    <meta name="twitter:image" content="/og.jpg" />
  </head>

  <body class="bg-stone-100 min-h-screen">
    <Header />

    <main id="app" class="py-8">
      <App client:load />
    </main>

    <Footer />
  </body>
</html>
